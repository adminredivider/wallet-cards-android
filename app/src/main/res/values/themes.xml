<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wallet" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/screen_new_background</item>
        <item name="android:statusBarColor">@color/screen_new_background</item>
    </style>

    <style name="Theme.Wallet" parent="Base.Theme.Wallet" />

<!--    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="android:background">?attr/colorPrimary</item>-->
<!--        <item name="titleTextAppearance">@style/ToolbarTitleText</item>-->
<!--    </style>-->

    <style name="ToolbarTitleText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/cera_pro_medium</item>
        <item name="fontWeight">500</item>
    </style>


    <style name="cerave_regular_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cera_pro_regular</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textSize">11sp</item>
<!--        <item name="android:paddingTop">5dp</item>-->
        <!--        <item name="android:paddingBottom">5dp</item>-->
        <item name="android:letterSpacing">0.01</item>
        <item name="fontWeight">400</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="Add_card_llStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/textfield_gray_stroke_bg</item>
    </style>

    <style name="textFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/cera_pro_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">400</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:minHeight">40dp</item>
    </style>


    <style name="outlineButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:fontFamily">@font/cera_pro_regular</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <!-- Use material style properties without 'app:' -->
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/stroke_grey_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconTint">@color/black_333333</item>
        <item name="rippleColor">@color/black_333333</item>
    </style>


    <style name="popUpDialogTextStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cera_pro_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/grey_4c4c4c</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>


    <style name="copy_to_clipboard_style" parent="popUpDialogTextStyle">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:gravity">end|center</item>
    </style>

    <style name="confirmation_dialog_actionBtn_style" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cera_pro_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="rippleColor">@color/grey_4c4c4c</item>
        <!--        min height causing issue for default padding -->
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/screen_new_background</item> <!-- Background color -->
        <item name="android:windowBackground">@color/screen_new_background</item>
        <item name="backgroundColor">@color/screen_new_background</item>
    </style>

</resources>